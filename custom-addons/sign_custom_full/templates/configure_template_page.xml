<odoo>
  <template id="configure_template_page" name="Configure Template Page">
    <t t-call="web.layout">
      <t t-set="title">Configure Template</t>

      <!-- Load JS PDF và logic -->
      <script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/3.4.120/pdf.min.js"></script>
      <script t-att-src="'/sign_custom_full/static/src/js/pdf_renderer.js'"></script>
      <link rel="stylesheet" href="/sign_custom_full/static/src/css/pdf_style.css"/>

      <!-- Thanh công cụ trên cùng -->
      <div class="top-toolbar" style="position: fixed; top: 0; left: 0; right: 0; background-color: #fff; padding: 5px; border-bottom: 1px solid #ccc; display: flex; justify-content: space-between; align-items: center; z-index: 1000;">
        <div>
          <span>Page <span id="current-page">1</span> of <span id="total-pages">1</span></span>
        </div>
        <div>
          <button style="margin: 0 5px;">-</button>
          <span id="zoom-level">100%</span>
          <button style="margin: 0 5px;">+</button>
          <select>
            <option>Tags</option>
            <option>Template Properties</option>
          </select>
        </div>
      </div>

      <!-- Sidebar trái -->
      <div class="sidebar" style="position: fixed; top: 50px; left: 0; width: 250px; background-color: #f8f9fa; height: calc(100% - 50px); overflow-y: auto; border-right: 1px solid #ccc;">
        <h4 style="padding: 10px; border-bottom: 1px solid #ccc;">Fields</h4>
        <ul style="list-style: none; padding: 0;">
          <li class="draggable-field" data-type="signature">Signature</li>
          <li class="draggable-field" data-type="initials">Initials</li>
          <li class="draggable-field" data-type="name">Name</li>
          <li class="draggable-field" data-type="email">Email</li>
          <li class="draggable-field" data-type="phone">Phone</li>
          <li class="draggable-field" data-type="company">Company</li>
          <li class="draggable-field" data-type="text">Text</li>
          <li class="draggable-field" data-type="multiline_text">Multiline Text</li>
          <li class="draggable-field" data-type="checkbox">Checkbox</li>
          <li class="draggable-field" data-type="radio_buttons">Radio Buttons</li>
          <li class="draggable-field" data-type="selection">Selection</li>
          <li class="draggable-field" data-type="date">Date</li>
        </ul>
      </div>

      <div class="container mt-4" style="margin-left: 250px; padding-top: 50px;">
        <h2>Configure Template: <t t-esc="template.name"/></h2>
        <!-- PDF container -->
        <div id="pdf-container" style="position: relative;"></div>
      </div>
    </t>
  </template>
</odoo>